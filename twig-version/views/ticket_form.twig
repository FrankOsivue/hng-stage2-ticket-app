{# views/ticket_form.twig - Form for Creating/Editing Tickets #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ pageTitle|default('Ticket Form - SOLPOINT') }}</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
</head>
<body>
    {% include '_header.twig' %}

    <main>
        <section class="page-content">
            <div class="container">
                <h2 class="section-title">{{ pageTitle }}</h2>

                {% if error %}
                    <p class="form-error" style="display: block; background-color: #FEE2E2; color: #DC2626; padding: 0.75rem; border-radius: 8px; margin-bottom: 1rem;">
                        {{ error }}
                    </p>
                {% endif %}

                <form method="POST" action="{{ formAction }}" class="auth-form" style="max-width: 600px;">

                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" id="title" name="title" value="{{ ticket.title|default('') }}" required>
                        <span class="form-error">Title is required.</span>
                    </div>

                    <div class="form-group">
                        <label for="status">Status</label>
                        <select id="status" name="status" required>
                            <option value="open" {{ ticket.status == 'open' ? 'selected' : '' }}>Open</option>
                            <option value="in_progress" {{ ticket.status == 'in_progress' ? 'selected' : '' }}>In Progress</option>
                            <option value="closed" {{ ticket.status == 'closed' ? 'selected' : '' }}>Closed</option>
                        </select>
                    </div>

                    <div style="display: flex; gap: 1rem; margin-top: 1.5rem;">
                        <button type="submit" class="btn btn-primary">{{ buttonText }}</button>
                        <a href="/tickets" class="btn btn-secondary">Cancel</a>
                    </div>

                </form>
            </div>
        </section>
    </main>

    {% include '_footer.twig' %}

    <script src="/js/main.js"></script>
</body>
</html>